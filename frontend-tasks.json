{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "install-frontend-dependencies",
            "type": "shell",
            "command": "npm",
            "args": ["install"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "problemMatcher": []
        },
        {
            "label": "start-frontend-dev",
            "type": "shell",
            "command": "npm",
            "args": ["start"],
            "group": "build",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "webpack compiled with (\\d+) error",
                    "file": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Compiling...",
                    "endsPattern": "webpack compiled|Failed to compile"
                }
            }
        },
        {
            "label": "build-frontend",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "problemMatcher": []
        },
        {
            "label": "start-fullstack",
            "dependsOrder": "parallel",
            "dependsOn": [
                "start-frontend-dev",
                "publish-release"
            ],
            "group": "build",
            "isBackground": true
        }
    ]
}
